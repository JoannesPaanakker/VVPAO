<div class="page-header header1">
  Login pagina VVPAO
</div>
<div class="container-fluid">
  <div class="row-fluid">
    <div class="col-xs-12 col-sm-8 col-md-6 page-box">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), wrapper: :horizontal_form) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      label: "Wachtwoord",
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, label: "Onthoud mij", as: :boolean if devise_mapping.rememberable? %>
        </div>
        <br>
        <div class="form-actions">
          <%= f.button :submit, "Login", class: 'knop' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<br>
<%= render "devise/shared/links" %>
