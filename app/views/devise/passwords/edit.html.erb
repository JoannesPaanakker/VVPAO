<div class="page-header header1">
  Pas wachtwoord aan.
</div>
<div class="container-fluid sub-page">
  <div class="row-fluid">
    <div class="col-xs-12 col-md-8 page-box">
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <%= f.input :reset_password_token, as: :hidden %>
        <%= f.full_error :reset_password_token %>

        <div class="form-inputs">
          <%= f.input :password,
                      label: "Nieuw wachtwoord",
                      required: true,
                      autofocus: true,
                      hint: ("minimaal #{@minimum_password_length} posities" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation, label: "Bevestig uw nieuwe wachtwoord", required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Verander wachtwoord" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render "devise/shared/links" %>
