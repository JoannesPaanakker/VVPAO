<div class="page-header header1">
  Aanvraag voor lidmaatschap
</div>
<div class="container-fluid">
  <div class="row-fluid">
    <div class="col-xs-12 col-sm-10 col-md-8 page-box">
      <p>
        Uw aanvraag wordt in behandeling genomen. U krijgt bericht per email over de activering van uw lidmaatschap.
      </p>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), wrapper: :horizontal_form) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: true,
                      autofocus: true ,
                      input_html: { autocomplete: "email" }%>
          <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          <%= f.input :password_confirmation, required: true %>
          <br>
          <div class="page-header header1">
            Persoonlijke informatie
          </div>
          <%= f.input :title, label: "aanhef",required: false, placeholder: "de heer, mevrouw, Drs." %>
          <%= f.input :first_name, label: "Voornaam",required: false %>
          <%= f.input :tussenvoegsel, label: "Tussenvoegsel", required: false, placeholder: "van der of de" %>
          <%= f.input :last_name, label: "Achternaam", required: true %>
          <%= f.input :street, label: "Straat en Huisnr.", required: true %>
          <%= f.input :postalcode, label: "Postcode", input_html: { class: 'input-postcode' }, required: false  %>
          <%= f.input :city, label: "Stad", required: true %>
          <%= f.input :phonenumber, label: "Tel. nummer", required: true  %>
          <%= f.input :newregistrations, label: "Neem nieuwe patienten aan", required: false  %>
          <%= f.association :expertise, label: "Specifieke deskundigheid", required: false  %>
          <%= f.association :targetaudience, label: "Patientengroep", required: false  %>
          <%= f.input :big, label: "BIG-nummer", required: false  %>
          <div class="page-header header1">
            Praktijk informatie
          </div>
          <%= f.input :practice_name, label: "Naam praktijk", required: false  %>
          <%= f.input :practice_street, label: "Straat & huisnr. praktijk", required: false  %>
          <%= f.input :practice_postalcode, label: "Postcode", input_html: { class: 'input-postcode' }, required: false  %>
          <%= f.input :practice_city, label: "Stad", required: false  %>
          <%= f.input :practice_email, label: "emailadres praktijk", required: false  %>
          <%= f.input :practice_phonenumber, label: "Tel. Nummer praktijk", required: false  %>
          <%= f.input :website, required: false  %>
          <%= f.input :contract, label: "Heeft u een contract met een verzekeraar?", required: true  %>
          <%= f.input :buddy, label: "Heeft u behoefte aan een collega/gids/vraagbaak die u opweg kan helpen?", required: false  %>
          <%= f.input :training_suggestion, label: "Heeft u wensen of tips t.a.v. het  nascholingsprogramma?", required: false  %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Verzend", class: "knop" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= link_to "annuleer", root_path, class: "knop knop-linksonder" %>
