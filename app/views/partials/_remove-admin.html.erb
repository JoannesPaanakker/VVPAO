<div class="modal" id="remove-admin<%= @admin.id %>" tabindex="-1" role="dialog" aria-labelledby="remove-admin<%= @admin.id %>" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <%= @admin.first_name %> <%= @admin.initials %> <%= @admin.last_name %>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for(@admin, url: user_path(@admin), html: { method: :put }, wrapper: :horizontal_form) do |f| %>

          <div class="form-inputs">
            <%= f.input :admin, label: "Administrator", required: false  %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Bewaar", class: "knop" %>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="knop" data-dismiss="modal">annuleer</button>
      </div>
    </div>
  </div>
</div>
