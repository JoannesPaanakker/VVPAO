<div class="modal" id="targetaudiences" tabindex="-1" role="dialog" aria-labelledby="targetaudiences" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        Lijst van Patientengroepen
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="new-targetaudience">
          <%= link_to 'nieuwe groep', new_targetaudience_path, remote: true, class: "knop" %>
        </div>
        <br>
        <div id="cancel-new-aud" class="knop" style="display:none;">
          annuleer
        </div>

        <div id="targetaudience-form" style="display:none;">
          <!-- _form.html.erb -->
        </div>
        <div class="lijst">
          <table id="targetodiences" >
            <%= render @targetaudiences  %>
          </table>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    </div>
  </div>
</div>
