<div class="modal" id="expertises" tabindex="-1" role="dialog" aria-labelledby="expertises" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        Lijst van Expertises
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="new-expertise">
          <%= link_to 'nieuwe expertise', new_expertise_path, remote: true, class: "knop" %>
        </div>
        <br>
        <div id="cancel-new-exp" class="knop" style="display:none;">
          annuleer
        </div>

        <div id="expertise-form" style="display:none;">
          <!-- _form.html.erb -->
        </div>

        <div class="lijst">
          <table id="ekspertises">
            <%= render @expertises %>
          </table>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    </div>
  </div>
</div>
