<div class="modal" id="activate<%= @user.id %>" tabindex="-1" role="dialog" aria-labelledby="activate<%= @user.id %>" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <%= @user.first_name %> <%= @user.initials %> <%= @user.last_name %>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for(@user, url: user_path(@user), html: { method: :put }, wrapper: :horizontal_form) do |f| %>

          <div class="form-inputs">
            <input type="hidden" name="activate" value="on">
            <%= f.input :member, label: "Lid geactiveerd", required: false  %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Bewaar", class: "knop" %>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="knop" data-dismiss="modal">annuleer</button>
      </div>
    </div>
  </div>
</div>
